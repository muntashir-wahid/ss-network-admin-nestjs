generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPER_ADMIN
  ADMIN
}

enum Status {
  ACTIVE
  DISABLED
}

enum InventoryChangeType {
  DISPATCH
  UPDATE
  STOCK_UPDATE
  PRICE_CHANGE
}

// Define your database schema here
model User {
  uid           String         @id @default(uuid())
  email         String         @unique
  name          String?
  password      String
  role          Role           @default(ADMIN)
  status        Status         @default(ACTIVE)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  inventoryLogs InventoryLog[]
}

model Inventory {
  uid            String  @id @default(uuid())
  assetName      String  @unique
  price          Decimal
  stock          Int
  totalPurchased Int     @default(0)
  description    String?

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  inventoryLogs InventoryLog[]
}

model InventoryLog {
  uid           String              @id @default(uuid())
  inventoryUid  String
  adminUid      String
  changeType    InventoryChangeType
  updatedStock  Int
  previousStock Int
  updatedPrice  Decimal
  previousPrice Decimal
  note          String?
  createdAt     DateTime            @default(now())

  inventory Inventory @relation(fields: [inventoryUid], references: [uid], onDelete: Cascade)
  admin     User      @relation(fields: [adminUid], references: [uid])

  @@index([inventoryUid])
}

model Zone {
  uid      String @id @default(uuid())
  zoneName String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  areas   Area[]
  clients Client[]
}

model Area {
  uid      String @id @default(uuid())
  areaName String @unique
  zoneUid  String
  zone     Zone   @relation(fields: [zoneUid], references: [uid], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  uid            String   @id @default(uuid())
  contact        String   @unique
  email          String?  @unique
  userId         String   @unique
  clientName     String
  addressLine    String
  connectionDate DateTime
  status         Status   @default(ACTIVE)
  package        String
  mpbsProvided   Int?
  zoneId         String
  zone           Zone     @relation(fields: [zoneId], references: [uid])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
